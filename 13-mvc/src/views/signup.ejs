<% if(message.length > 0){ %>
<script>
  Swal.fire({
    title: "<%= message[1] %>",
    text: "<%= message[2] %>",
    icon: "<%= message[0] %>",
  });
</script>
<% } let nama=""; let email=""; let password=""; if(data){ nama=data.nama;
email=data.email; password=data.password; } %>
<div class="row center">
  <div class="container col-50">
    <h2 class="header">Register User</h2>
    <form action="/signup" method="post">
      <div class="row">
        <div class="col-25">
          <label for="nama">Nama Pengguna</label>
        </div>
        <div class="col-50">
          <input type="text" id="nama" name="nama" value="<%= nama %>" />
        </div>
      </div>
      <div class="row">
        <div class="col-25">
          <label for="email">Email</label>
        </div>
        <div class="col-50">
          <input type="email" id="email" name="email" value="<%= email %>" />
        </div>
      </div>
      <div class="row">
        <div class="col-25">
          <label for="password">Password</label>
        </div>
        <div class="col-50">
          <input
            type="password"
            id="password"
            name="password"
            value="<%= password %>"
          />
        </div>
      </div>
      <div class="row">
        <div class="col-25">&nbsp;</div>
        <div class="col-50">
          <button type="submit" class="btn primary">Register</button>
        </div>
      </div>
    </form>
    <a href="/login">login</a>
  </div>
</div>
